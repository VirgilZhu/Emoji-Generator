.container {
  /* position: fixed; */
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.image-box{
  position: absolute;
  top: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  max-width: 250px;
  max-width: 230px;
  margin-bottom: 0;
  z-index: 1;
}

.showtype {
  position: absolute;
  top: 780rpx;
  padding: 10px 20px;
  border: 1px solid rgb(0, 132, 255);
  border-radius: 5px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300px;
  height: 20px;
  font-size: 16px;
  color:white;
  background-color: rgb(158, 204, 51);
  margin-bottom: 20rpx;
}

.btnSaved {
  position: absolute;
  top: 0%; 
  right: 3%; 
  width: 80%;
  margin-top: 20rpx;
  /* background-color: rgb(158, 204, 51); */
  background: linear-gradient(132deg, #1A8DEB -7%, rgba(47, 50, 232, 0.6728) 32%, rgba(25, 27, 185, 0.3338) 66%, rgba(255, 255, 255, 0) 100%);
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  padding-left: 38px; 
  justify-content: center;
}

.btnSaveImg{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 8px; 
}

.input-container {
  margin-bottom: 0;
}

.input-box {
  margin-top: 20rpx;
  margin-bottom: 0;
}

.textarea {
  width: 100%;
  height: 50px;
}

.style-select {
  display: flex;
  overflow: hidden;
  justify-content: center;
  white-space: nowrap;
  margin-top: 400rpx;
  margin-bottom: 20rpx;
}

.select-item{
  width: 160rpx;
  height: 150rpx;
  display: inline-block;
  background-color: rgb(244, 245, 245);
  border: 2px solid rgb(244, 245, 245);
  margin: 8rpx;
  box-sizing: border-box;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.selectpng{
  /* width: 150rpx; */
  height: 150rpx;
  width: 160rpx;
  object-fit: cover;
  position: relative;
  right: 3px; 
  top: -2px;
}

.selected {
  border: 2px solid red;
}

.input-text {
  width: 360px;
  height: 40px;
  margin-top: 20px;
  margin-bottom: 10px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
  box-sizing: border-box;
}

.submit-button {
  width: 100%;
  margin-top: 0px;
  background-color: #1AAD19;
  color: white;
  border: none;
  text-align: center;
  font-size: 18px;
}

.save-button {
  width: 100%;
  padding: 15px;
  background-color: #007aff;
  color: white;
  border: none;
  text-align: center;
  font-size: 18px;
  margin-top: 0;
}
