.container {
  position: relative;
  width: 100%;
  height: 100vh;
}

.preview-image {
  width: 80%;
  max-width: 300px;
  margin-bottom: 0;
  padding: 0;
}

.picker {
  /* margin-top: 20px; */
  padding: 10px;
  background-color: rgb(158, 204, 51);
  color: white;
  border-radius: 5px;
  text-align: center;
}

.grayscale {
  filter: grayscale(100%);
}

.sepia {
  filter: sepia(100%);
}

.input-text {
  width: 100%;
  max-width: 360px;
  height: 50px;
  margin-top: 20px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
  box-sizing: border-box;
}

.btnUpload {
  position: absolute;
  top: 0%; 
  left: 3%; 
  width: 80%;
  margin-top: 20rpx;
  /* background-color: rgb(173, 214, 76); */
  background: linear-gradient(132deg, #1A8DEB -7%, rgba(47, 50, 232, 0.6728) 32%, rgba(25, 27, 185, 0.3338) 66%, rgba(255, 255, 255, 0) 100%);
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  padding-left: 38px; 
  justify-content: center;
}

.btnUploadImg{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 8px; 
}

.btnSaved {
  position: absolute;
  top: 0%; 
  right: 3%; 
  width: 80%;
  margin-top: 20rpx;
  /* background-color: rgb(158, 204, 51); */
  background: linear-gradient(132deg, #1A8DEB -7%, rgba(47, 50, 232, 0.6728) 32%, rgba(25, 27, 185, 0.3338) 66%, rgba(255, 255, 255, 0) 100%);
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  padding-left: 38px; 
  justify-content: center;
}

.btnSaveImg{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 8px; 
}

.btnSaved[disabled] {
  background-color: #ddd;
  color: #aaa;
  cursor: not-allowed;
}

.green-button {
  background-color: #4CAF50; /* 绿色背景 */
  color: white;             /* 白色文字 */
  border: none;             /* 无边框 */
  padding: 15px 32px;       /* 内边距 */
  text-align: center;       /* 文字居中 */
  text-decoration: none;    /* 无下划线 */
  display: inline-block;    /* 内联块元素 */
  font-size: 16px;          /* 字体大小 */
  margin: 4px 2px;          /* 外边距 */
  cursor: pointer;          /* 鼠标悬停时的光标样式 */
  border-radius: 4px;       /* 圆角边框 */
}

.green-button:hover {
  background-color: #45a049; /* 悬停时的背景色 */
}

.style-select {
  display: flex;
  overflow: hidden;
  white-space:nowrap;
}

.select-item{
  width:160rpx;
  height: 150rpx;
  display: inline-block;
  background-color: rgb(244, 245, 245);
}

.selectpng{
  width: 150rpx;
  height: 150rpx;
  position: relative;
  left: 5px; 
  top: 0px;
}
