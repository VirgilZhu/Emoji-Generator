.container {
  position: relative;
  width: 100%;
  height: 100vh;
}

.preview-image {
  width: 100%;
  max-width: 300px;
  margin-top: 20px;
}

.picker {
  margin-top: 20px;
  padding: 10px;
  background-color: #f0f0f0;
  border-radius: 5px;
}

.grayscale {
  filter: grayscale(100%);
}

.sepia {
  filter: sepia(100%);
}

.input-text {
  width: 100%;
  max-width: 300px;
  height: 100px;
  margin-top: 20px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
  box-sizing: border-box;
}

.btn1 {
  position: absolute;
  top: 0%; /* 距离顶部50% */
  left: 2%; /* 距离左边50% */
  width: 80%;
  margin-top: 20rpx;
  background-color: rgb(158, 204, 51);
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
