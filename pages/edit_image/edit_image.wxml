    <image data-type="always"  bind:tap="style_select" class="selectpng" src='./image/always.png' alt="Upload Icon"></image>
  </view>
  <view class="select-item">
    <image data-type="fightsunuo"  bind:tap="style_select" class="selectpng" src='./image/fightsunuo.jpg' alt="Upload Icon"></image>
  </view>
  <view class="select-item">
    <image data-type="animegen_gqj"  bind:tap="style_select" class="selectpng" src='./image/animegen_gqj.jpg' alt="Upload Icon"></image>
  </view>
  <view class="select-item">
    <image data-type="animegen_xhc"  bind:tap="style_select" class="selectpng" src='./image/animegen_xhc.jpg' alt="Upload Icon"></image>
  </view>
  <view class="select-item">
    <image data-type="animegen_rbf"  bind:tap="style_select" class="selectpng" src='./image/animegen_rbf.jpg' alt="Upload Icon"></image>
  </view>
  <view class="select-item">
    <image data-type="animegen_smf"  bind:tap="style_select" class="selectpng" src='./image/animegen_smf.jpg' alt="Upload Icon"></image>
  </view>
  <view class="select-item">
    <image data-type="bodysegment"  bind:tap="style_select" class="selectpng" src='./image/bodysegment.jpg' alt="Upload Icon"></image>
  </view>
