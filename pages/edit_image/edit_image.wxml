    <image data-type="fightsunuo" data-text="false" bind:tap="style_select" class="selectpng" src='./image/fightsunuo.jpg' alt="Upload Icon"></image>
  </view>
  <view class="select-item">
    <image data-type="animegen_gqj" data-text="false" bind:tap="style_select" class="selectpng" src='./image/animegen_gqj.jpg' alt="Upload Icon"></image>
  </view>
  <view class="select-item">
    <image data-type="animegen_xhc" data-text="false" bind:tap="style_select" class="selectpng" src='./image/animegen_xhc.jpg' alt="Upload Icon"></image>
  </view>
  <view class="select-item">
    <image data-type="animegen_rbf" data-text="false" bind:tap="style_select" class="selectpng" src='./image/animegen_rbf.jpg' alt="Upload Icon"></image>
  </view>
  <view class="select-item">
    <image data-type="animegen_smf" data-text="false" bind:tap="style_select" class="selectpng" src='./image/animegen_smf.jpg' alt="Upload Icon"></image>
