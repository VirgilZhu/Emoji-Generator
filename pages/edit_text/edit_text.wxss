.container {
  padding: 20px;
}

.preview-image {
  width: 80%;
  max-width: 300px;
  margin-bottom: 0;
  padding: 0;
}

.picker {
  margin-bottom: 20px;
  padding: 10px;
  background-color: #f0f0f0;
  border-radius: 5px;
}

.showtype {
  padding: 10px 20px;
  border: 1px solid rgb(0, 132, 255);
  border-radius: 5px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300px;
  height: 20px;
  font-size: 16px;
  color:white;
  background-color: rgb(158, 204, 51);
  margin: 10px;
}

.input-container {
  margin-bottom: 20px;
}

.input-box {
  margin-bottom: 10px;
}

.textarea {
  width: 100%;
  height: 100px;
}

.style-select {
  display: flex;
  overflow: hidden;
  white-space:nowrap;
}

.select-item{
  width:160rpx;
  height: 150rpx;
  display: inline-block;
  background-color: rgb(244, 245, 245);
}

.selectpng{
  width: 150rpx;
  height: 150rpx;
  position: relative;
  left: 5px; 
  top: 0px;
}

.submit-button {
  width: 100%;
  padding: 15px;
  background-color: #1AAD19;
  color: white;
  border: none;
  text-align: center;
  font-size: 18px;
}

.preview-image {
  width: 100%;
  height: auto;
  margin-top: 20px;
}

.save-button {
  width: 100%;
  padding: 15px;
  background-color: #007aff;
  color: white;
  border: none;
  text-align: center;
  font-size: 18px;
  margin-top: 10px;
}
